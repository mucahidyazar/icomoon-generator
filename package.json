{
  "name": "icomoon-generator",
  "author": {
    "email": "mucahidyazar@gmail.com",
    "name": "mucahidyazar"
  },
  "version": "1.5.0",
  "description": "This is the best icomoon tool that you can ever seen",
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "format": "prettier --write .",
    "lint:format": "prettier --check .",
    "lint": "eslint src/**",
    "test": "jest ./tests",
    "clean": "rimraf node_modules package-lock.json",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && concurrently yarn:build:*",
    "build:esm": "cross-env BABEL_ENV=esm babel src --root-mode upward --extensions .js,.ts -d dist/esm --source-maps --copy-files",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --root-mode upward --extensions .js,.ts -d dist/cjs --source-maps --copy-files"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/runtime": "^7.12.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "puppeteer": "10.1.0",
    "yargs": "^17.0.1"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mucahidyazar/icomoon-generator.git"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
